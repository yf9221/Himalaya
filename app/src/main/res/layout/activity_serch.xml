<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#fff4f4f4"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="40dp">
      <ImageView
          android:id="@+id/search_back"
          android:layout_width="35dp"
          android:src="@drawable/selector_serach_back"
          android:layout_marginRight="5dp"
          android:layout_marginLeft="10dp"
          android:paddingRight="10dp"
          android:layout_height="30dp"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp">
            <EditText
                android:id="@+id/search_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/shape_edit_text_cursor"
                android:hint="请输入专题关键字"
                android:maxLines="1"
                android:textSize="16sp"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:background="@drawable/shape_edit_text_bg"
                />
            <ImageView
                android:id="@+id/search_input_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/clean"/>

        </RelativeLayout>
         <TextView
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="搜索"
            android:textSize="18dp"
            android:textColor="@color/search_color"/>



    </LinearLayout>
    <FrameLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
   <!-- <com.example.myapplication.views.FlowTextLayout
        android:id="@+id/flow_text_layout"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>-->



</LinearLayout>