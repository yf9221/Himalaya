<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="467dp"
        android:layout_height="170dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_confirm_dialog_bg"
        >
        <TextView
             android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="25sp"
            android:text="取消订阅该专辑吗"/>
        <LinearLayout
            android:id="@+id/button_dialog_container"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_height="70dp">
            <TextView
                android:id="@+id/dialog_cancel_sub"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textColor="#C5C0C0"
                android:text="取消订阅"/>
            <View
                android:background="#dfdfdf"
                android:layout_width="1dp"
                android:layout_height="50dp"
                />
            <TextView
                android:id="@+id/dialog_give_up_tv"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="18sp"
                 android:textColor="@color/main_color"
                android:text="我再想想"/>


        </LinearLayout>
        <View
            android:background="#dfdfdf"
            android:layout_above="@id/button_dialog_container"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            />


    </RelativeLayout>

</RelativeLayout>