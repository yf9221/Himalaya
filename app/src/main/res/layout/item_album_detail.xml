<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/shape_album_item_bg"
    android:layout_height="wrap_content">
    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/other_text"
        android:textSize="26sp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"

        />
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/other_text"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/detail_item_titile"
            android:maxLines="1"
            android:layout_marginRight="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是大标题ffsafaasfasssffffff"
            android:textColor="#000000"
            android:ellipsize="end"
            android:textSize="24sp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"


            >
            <TextView
                android:id="@+id/detail_item_play_count"
                android:drawableLeft="@mipmap/detail_paly"
                android:drawablePadding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#979797"
                android:text="14.4万"/>
            <TextView
                android:id="@+id/detail_item_duration"
                android:drawableLeft="@mipmap/laba"
                android:drawablePadding="4dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#979797"
                android:text="05:25"/>




        </LinearLayout>


    </LinearLayout>
<TextView
    android:id="@+id/detail_item_updata_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="2018-11-22"
   android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="20dp"

    />


</RelativeLayout>